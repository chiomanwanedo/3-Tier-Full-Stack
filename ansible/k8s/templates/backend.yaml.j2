apiVersion: apps/v1
kind: Deployment
metadata:
  name: backend
  namespace: {{ k8s_namespace }}
  labels:
    app: backend
spec:
  replicas: 2
  selector:
    matchLabels:
      app: backend
  template:
    metadata:
      labels:
        app: backend
    spec:
      containers:
        - name: backend
          image: {{ image | tojson }}
          ports:
            - containerPort: {{ backend_port }}
          envFrom:
            - secretRef:
                name: app-secrets
          readinessProbe:
            httpGet:
              path: /
              port: {{ backend_port }}
            initialDelaySeconds: 10
            periodSeconds: 10
          livenessProbe:
            httpGet:
              path: /
              port: {{ backend_port }}
            initialDelaySeconds: 30
            periodSeconds: 20
---
apiVersion: v1
kind: Service
metadata:
  name: backend
  namespace: {{ k8s_namespace }}
spec:
  type: LoadBalancer
  selector:
    app: backend
  ports:
    - name: http
      port: {{ backend_port }}
      targetPort: {{ backend_port }}
